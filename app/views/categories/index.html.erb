<h1>Listing categories</h1>

<table>
  <tr align="left">
    <th>Category name</th>
  </tr>

<% for category in @categories %>
  <tr>
    <td><%= link_to category.category_name, category %></td>
    <td>
    	<dl>
    		<dt><%= link_to 'Modify', edit_category_path(category) %></dt>
    		<dt><%= link_to 'Delete', category, :confirm => 'Are you sure?', :method => :delete %></dt>
    	</dl>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New category', new_category_path %> || <a href="http://localhost:3000/blog">Main Page</a> || <a href="http://localhost:3000/articles">View Articles</a>
