<div class="login-form">
<% form_tag do %>
	<fieldset>
			<legend>Please Log In</legend>
		<table>
			<tr>
				<td>Username:</td>
				<td><%= text_field_tag :name, params[:name] %></td>
			</tr>
			
			<tr>
				<td>Password:</td>
				<td><%= password_field_tag :password, params[:password] %></td>
			</tr>
		</table>
		
		<p>
			<%= submit_tag "Log In" %>
		</p>
	</fieldset>
<% end %>
</div>