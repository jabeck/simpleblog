<h1>Listing categories</h1>

<table>
  <tr align="left">
    <th>Category name</th>
    <th>Articles in this Category
  </tr>

<% for category in @categories %>
  <tr>
  	 <td><%= category.category_name %></td>
  	 <td><%= category.get_count %></td>
    <td><%= link_to 'View Articles in this Category', category %></td>
    <td>
    	<dl>
    		<dt><%= link_to 'Modify', edit_category_path(category) %></dt>
    		<dt><%= link_to 'Delete', category, :confirm => 'Are you sure?', :method => :delete %></dt>
    	</dl>
    </td>
  </tr>
<% end %>
</table>

<br />

