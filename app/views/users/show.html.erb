<div id="blog-display">
	<div class="label">
		Viewing articles written by "<%= @user.name %>"
	</div>

	<div class="article">
		<div id="blog">
			<% if @published_articles.empty? %>
				This author has not published any articles yet!
			<% end %>
			
			<% for article in @published_articles.reverse %>
			
				<div class="entry">
					<div class="title">
						<%= link_to article.title, article %>
					</div>
					<div class="preview">
						<%= truncate(article.body.gsub(/<.*?>/,''), 300) %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>

