<h1>New article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <b>Body</b><br />
    <%= f.text_area :body, :rows => 20, :cols => 120 %>
  </p>
	<p>
		<label for="category">Category<br /></label>
			<select name="category">
				<% for category in @categories %>
					<option value="<%= category.id %>">
					<%= category.category_name %>
					</option>
				<% end %>
			</select>
	</p>
	<p>
		<b>Published Status: </b> Not published yet.<br />
	</p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>
